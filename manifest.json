{
  "manifest_version": 3,
  "name": "Anki Note Saver",
  "version": "0.1.0",
  "description": "Save current tab as a new note in Anki",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "commands": {
    "save-note": {
      "description": "Save current tab as a new note in Anki"
    }
  }
}
